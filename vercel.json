{
  "version": 2,
  "buildCommand": "prisma generate && node fix-build.js && next build",
  "installCommand": "npm install",
  "framework": "nextjs",
  "devCommand": "next dev",
  "git": {
    "deploymentEnabled": {
      "main": true
    }
  },
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "images": {
    "domains": ["images.unsplash.com"],
    "sizes": [640, 750, 828, 1080, 1200, 1920, 2048, 3840]
  },
  "env": {
    "NODE_ENV": "production"
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    }
  ]
} 